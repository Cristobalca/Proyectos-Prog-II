@model IEnumerable<InstitutoITLA.Models.Asignaturas>

@{
    ViewData["Title"] = "Asignatura";
}

    <form method="get" action=@Url.Action("InicioAsgt", "Asignaturas" )>
        <div class="form-group">

            @Html.TextBox("nombre", null, new
            {
                placeholder = "Buscar Por Nombre",

            })
            <button class="btn btn-info" type="submit">Buscar</button>
        </div>

    </form>
<br />
<span class="table-add float-right mb-3 mr-2">
    <a asp-action="CrearAsgt" class="text-success">
        Crear Asignatura
        <i class="fas fa-plus fa-2x" aria-hidden="true"></i>
    </a>
</span>
<br />
<br />
<br />

<div class="card">
    <h3 class="card-header font-weight-bold text-uppercase py-4  text-center">
        Asignaturas

    </h3>

</div>



<div class="card-body">
    <div class="table-responsive">
        <div id="table" class="table-editable">

            <table class="table table-bordered table-responsive-md table-striped text-center">
                <thead>
                    <tr>
                        <th class="text-center">@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.TipoDeAsignatura)</th>
                        <th class="text-center">Detalles</th>
                        <th class="text-center">Opciones</th>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoDeAsignatura)
                            </td>
                            <td>
                                <!--Primer boton -->
                                <span class="table-up">
                                    <a asp-action="DetalleAsgt" asp-route-id="@item.AsignaturasID" class="indigo-text">
                                        <span style="font-size:25px; color: blue; ">
                                            <i class="fas fa-info"
                                               aria-hidden="true"></i>
                                        </span>
                                    </a>
                                </span>
                            </td>
                            <td>
                                <!--Segundo boton -->
                                <span style="font-size: 25px; color: Dodgerblue; margin:2px;">
                                    <a asp-action="EditarAsgt" asp-route-id="@item.AsignaturasID" class="fas fa-edit"></a>
                                </span>

                                <!--Tercer boton -->
                                <span style="font-size: 25px; color:red;">
                                    <a asp-action="BorrarAsgt" asp-route-id="@item.AsignaturasID">
                                        <span style="font-size: 25px; color: red; margin:2px;">
                                            <i class="fas fa-trash-alt"></i>
                                        </span>
                                    </a>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>


            </table>

        </div>
    </div>
</div>
<!-- Editable table -->
